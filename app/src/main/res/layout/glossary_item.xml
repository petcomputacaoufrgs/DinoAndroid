<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/card_side_margins"
    android:paddingTop="@dimen/card_bottom_top_margins"
    android:paddingRight="@dimen/card_side_margins"
    android:paddingBottom="@dimen/card_bottom_top_margins"
    android:clipToPadding="false">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/glossary_card"
        android:elevation="1dp"
        android:outlineAmbientShadowColor="#00923131"
        android:paddingStart="@dimen/card_inner_padding"
        android:paddingTop="@dimen/card_inner_padding"
        android:paddingEnd="@dimen/card_bottom_padding"
        android:paddingBottom="@dimen/card_bottom_padding"
        android:translationZ="1dp">

        <TextView
            android:id="@+id/glossary_item_tv_title"
            android:layout_width="318dp"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:gravity="center"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:textAlignment="viewStart"
            android:textColor="@color/colorSecondary"
            android:textSize="@dimen/text_size_medium"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/glossary_item_tv_text"
            android:layout_width="258dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/glossary_item_tv_title"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:text="@string/glossario_definicao_default"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_small" />

    </RelativeLayout>

</RelativeLayout>